@import '../defaults'

.label
  border-radius: $radius
  color: #FFF
  display: inline-block
  font-size: 11px
  font-weight: bold
  height: 20px
  padding: 0 0.5em
  text-align: center
  text-transform: uppercase

  &.label-default
    background-color: $label-default

  &.label-info
    background-color: $label-info

  &.label-success
    background-color: $label-success

  &.label-important
    background-color: $label-important

  &.label-warning
    background-color: $label-warning

  &.label-inverse
    background-color: $label-inverse
    color: $label-inverse-color
