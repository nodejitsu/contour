@import "defaults"
@import "mixins/sprite"

// The content in the footer is lighter then the rest, yo
$light-base = lighten($base-color, 50%)

.doormat
  font-size: 13px
  border-top: 1px solid $divider
  margin: 0 -20px 0
  padding: 20px

  dl
    margin-right: 0
    min-height: 200px

  .newsletter
    min-width: 235px
    width: 28%

  dt
    font-weight: bold
    margin-bottom: 30px
    text-transform: uppercase

  dd
    margin: 0

    a
      color: $light-base
      font-weight: normal
      text-decoration: none

      &:hover
        text-decoration: underline

  form
    margin-bottom: 3em
    position: relative

    button
      absolute: top -22px right 3px

    input[type=email]
      margin-right: 102px
      padding-right: @margin-right

.social
  padding: 0

  li
    display: inline-block
    float: left

    a
      color: lighten($base-color, 80%)
      font-size: 25px
      margin-right: 10px

      &:hover
      &:active
        color: lighten($base-color, 30%)
        text-decoration: none

.copyright
  color: $light-base
  white-space: nowrap

.credits
  text-align: center

@media handheld, only screen and (max-width: 767px)
  .doormat
    margin: 0

    .twocol
    .newsletter
      float: left
      width: 50%

    .newsletter
      width: 100%